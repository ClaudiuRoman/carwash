{% extends 'base.html.twig' %}

{% block main %}
    <div class="container">
        <div class="row">
             <div class="col-md-6 col-md-push-3">
                 <p class="text-center">Carwash </p>
                 <p>Worker: {{ receipt.order.user.username }}</p>
                 <p>Worker: {{ receipt.order.user.name }}</p>
                 <p>Date and time: {{ receipt.order.createdAt | date('Y-m-d h:i:s') }}</p>
                 <div class="row">
                     <div class="col-md-4">
                         Products
                     </div>
                     <div class="col-md-4">
                         Quantity
                     </div>
                     <div class="col-md-4">
                         Price
                     </div>
                     {% for product in receipt.order.products %}
                         <div class="col-md-4">
                             {{ product.name }}
                         </div>
                         <div class="col-md-4">
                             1
                         </div>
                         <div class="col-md-4">
                             {{ product.price }}
                         </div>
                     {% endfor %}
                     <div class="col-md-4">
                         Total
                     </div>
                     <div class="col-md-4">
                     </div>
                     <div class="col-md-4">
                         {% if price.totalWithDiscount %}
                             {{ price.totalWithDiscount }}
                         {% else %}
                             {{ price.total }}
                         {% endif %}
                     </div>
                     {% if price.promotion %}
                         <div class="col-md-4">
                             {{ promotion.name }}
                         </div>
                         <div class="col-md-4">
                             1
                         </div>
                         <div class="col-md-4">
                              {{ price.total }}
                         </div>
                     {% endif %}
                     <div class="col-md-4">
                          VAT
                     </div>
                     <div class="col-md-4">

                     </div>
                     <div class="col-md-4">
                         {{ price.vat }}
                     </div>
                 </div>
                 <form method="post">
                     <button class="btn btn-default" type="submit">Print receipt</button>
                 </form>
             </div>
        </div>
    </div>
{% endblock %}